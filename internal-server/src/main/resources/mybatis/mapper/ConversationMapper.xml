<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.close.ai.mapper.ConversationMapper">
    <resultMap id="ConversationMap" type="com.close.ai.pojo.Conversation">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="state" property="state" jdbcType="TINYINT"/>
        <result column="from_type" property="fromType" jdbcType="BIGINT"/>
        <result column="from_id" property="fromId" jdbcType="VARCHAR"/>
        <result column="to_type" property="toType" jdbcType="VARCHAR"/>
        <result column="to_id" property="toId" jdbcType="VARCHAR"/>
        <result column="is_group" property="isGroup" jdbcType="VARCHAR"/>
        <result column="group_id" property="groupId" jdbcType="BIGINT"/>
        <result column="created_time" property="createdTime" jdbcType="TIMESTAMP"/>
        <result column="updated_time" property="updatedTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectConversationById" resultMap="ConversationMap">
        SELECT id, state, from_type, from_id, to_type, to_id, is_group, group_id, created_time, updated_time
        FROM conversation
        WHERE id = #{id}
    </select>

    <insert id="insertConversation" parameterType="com.close.ai.pojo.Conversation">
        INSERT INTO conversation (id, state, from_type, from_id, to_type, to_id, is_group, group_id, created_time, updated_time)
        VALUES (#{id}, #{state}, #{fromType}, #{fromId}, #{toType}, #{toId}, #{isGroup}, #{groupId}, NOW(), NOW())
    </insert>

    <update id="updateConversationById" parameterType="com.close.ai.pojo.Conversation">
        UPDATE conversation
        <set>
            <if test="state != null">state = #{state},</if>
            <if test="fromType != null">from_type = #{fromType},</if>
            <if test="fromId != null">from_id = #{fromId},</if>
            <if test="toType != null">to_type = #{toType},</if>
            <if test="toId != null">to_id = #{toId},</if>
            <if test="isGroup != null">is_group = #{isGroup},</if>
            <if test="groupId != null">group_id = #{groupId},</if>
            updated_time = NOW()
        </set>
        WHERE id = #{id}
    </update>
</mapper>